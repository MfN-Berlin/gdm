<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="add fields to networks" author="thomas.pfuhl">
        <preConditions onFail="CONTINUE">
            <not>
                <columnExists columnName="headquarter" tableName="networks" schemaName="projektmetadaten"/>
            </not>
        </preConditions>

        <comment>add properties</comment>
        <addColumn schemaName="projektmetadaten" tableName="networks">
            <column name="headquarter" type="varchar(100)"/>
        </addColumn>
        
    </changeSet>
 
</databaseChangeLog>
